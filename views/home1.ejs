      // Sửa lại hàm addToCart để nhắc nhở đăng nhập
      async function addToCart(productId, price, name) {
        try {
          const shouldLogin = confirm(
            "Bạn cần đăng nhập để có trải nghiệm mua sắm tốt hơn. Bạn có muốn đăng nhập không?"
          );
          if (shouldLogin) {
            window.location.href = "/signin";
            return;
          }

          const response = await fetch("/guest-cart/add", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productId, price, name }),
          });
          const data = await response.json();
          alert(data.message || "Thêm vào giỏ hàng thành công!");
          location.reload();
        } catch (error) {
          alert("Lỗi khi thêm vào giỏ hàng. Vui lòng thử lại.");
        }
      }

      async function removeFromCart(productId) {
        try {
          const response = await fetch("/guest-cart/remove", {
            method: "DELETE",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productId }),
          });
          const data = await response.json();
          alert(data.message || "Đã xóa sản phẩm khỏi giỏ hàng!");
          location.reload();
        } catch (error) {
          alert("Đã xảy ra lỗi khi xóa sản phẩm. Vui lòng thử lại.");
        }
      }

      function checkoutCart() {
        fetch("/guest-cart/checkout", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            email: "example@example.com",
            fullName: "Guest User",
            address: "Guest Address",
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            alert(data.message || "Thanh toán thành công!");
            location.reload();
          })
          .catch((error) => {
            alert("Lỗi khi thanh toán. Vui lòng thử lại.");
          });
      }
