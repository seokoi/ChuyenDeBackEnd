    <!-- Products Section -->
    <section class="products-section" id="menu">
      <h2 class="section-title">Menu của chúng tôi</h2>
      <div class="products-grid">
        <% if (products && products.length > 0) { %> <%
        products.forEach(function(product) { %>
        <div class="product-card">
          <img
