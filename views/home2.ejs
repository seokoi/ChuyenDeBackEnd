    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: #f5f5f5;
        color: #333;
        line-height: 1.6;
      }

      /* Navbar Styles */
      .navbar {
        background-color: var(--bg-dark);
        padding: 1rem 0;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
      }

      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2rem;
      }

      .logo {
        font-family: "Playfair Display", serif;
        font-size: 2rem;
        color: var(--text-light);
        text-decoration: none;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        align-items: center;
      }

      .nav-links a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .nav-links a:hover {
        color: var(--text-light);
      }

      /* Hero Section */
      .hero {
        height: 80vh;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        margin-top: 76px;
      }

      .hero-content h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        font-family: "Playfair Display", serif;
      }

      .hero-content p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
      }

      /* Products Section */
      .products-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 0 2rem;
      }

      .section-title {
        text-align: center;
        font-family: "Playfair Display", serif;
        font-size: 2.5rem;
        color: var(--bg-dark);
        margin-bottom: 3rem;
      }

      .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
      }

      .product-card {
        background: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .product-card:hover {
        transform: translateY(-5px);
      }

      .product-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
      }

      .product-info {
        padding: 1.5rem;
      }

      .product-info h3 {
        font-family: "Playfair Display", serif;
        color: #2c1810;
        margin-bottom: 0.8rem;
        font-size: 1.3rem;
        font-weight: 600;
      }

      .product-info p {
        color: #4a4a4a;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1rem;
      }

      .product-price {
        color: #c17f59;
        font-weight: 700;
        font-size: 1.3rem;
        margin: 0.8rem 0;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
      }

      .add-to-cart-btn {
        width: 100%;
        padding: 0.8rem;
        background-color: var(--primary-color);
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .add-to-cart-btn:hover {
        background-color: var(--secondary-color);
      }

      /* Cart Sidebar */
      .cart-sidebar {
        position: fixed;
        top: 0;
        right: -400px;
        width: 400px;
        height: 100vh;
        background: #fff;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: right 0.3s ease;
        z-index: 1001;
        overflow-y: auto;
      }

      .cart-sidebar.active {
        right: 0;
      }

      .cart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--primary-color);
      }

      .cart-header h3 {
        color: var(--bg-dark);
        font-family: "Playfair Display", serif;
        font-size: 1.5rem;
        margin: 0;
      }

      #close-cart {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: var(--bg-dark);
        cursor: pointer;
        transition: color 0.3s ease;
      }

      #close-cart:hover {
        color: var(--primary-color);
      }

      #cart-items {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      #cart-items li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
        font-size: 0.95rem;
        color: #2c1810;
      }

      .remove-btn {
        background: #ff4444;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.8rem;
        transition: background-color 0.3s ease;
      }

      .remove-btn:hover {
        background: #cc0000;
      }

      #cart-total {
        font-size: 1.3rem;
        font-weight: 700;
        text-align: right;
        margin: 20px 0;
        color: #2c1810;
        padding: 15px 0;
        border-top: 2px solid var(--primary-color);
      }

      #checkout-btn {
        width: 100%;
        padding: 12px;
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      #checkout-btn:hover {
        background: var(--secondary-color);
      }

      /* Cart Icon Style */
      #cart-toggle {
        position: relative;
        color: #fff;
        text-decoration: none;
      }

      #cart-toggle i {
        font-size: 1.2rem;
        transition: color 0.3s ease;
      }

      #cart-toggle:hover i {
        color: var(--text-light);
      }

      /* Responsive Cart */
      @media (max-width: 480px) {
        .cart-sidebar {
          width: 100%;
          right: -100%;
        }

        #cart-items li {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }

        .remove-btn {
          align-self: flex-end;
        }
      }

