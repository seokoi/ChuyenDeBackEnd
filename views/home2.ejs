      <ul id="cart-items">
        <% if (cart && cart.items && cart.items.length > 0) { %> <%
        cart.items.forEach(function(item) { %>
        <li>
          <%= item.productId.name %> - <%= item.price.toLocaleString('vi-VN',
          {style: 'currency', currency: 'VND'}) %> x <%= item.quantity %>
          <button
            class="remove-btn"
            onclick="removeFromCart('<%= item.productId._id %>')"
          >
            Xóa
          </button>
        </li>
        <% }); %> <% } else { %>
        <li>Chưa có sản phẩm nào trong giỏ hàng.</li>
        <% } %>
      </ul>
      <div id="cart-total">
        <% let cartTotal = 0; if (cart && cart.items && cart.items.length > 0) {
        cartTotal = cart.items.reduce(function(sum, item) { return sum +
        (item.price * item.quantity); }, 0); } %> Tổng cộng: <%=
        cartTotal.toLocaleString('vi-VN', {style: 'currency', currency: 'VND'})
        %>
      </div>
      <button id="checkout-btn" onclick="checkoutCart()">Thanh toán</button>
    </div>

